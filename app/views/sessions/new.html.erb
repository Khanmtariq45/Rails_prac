<h2>Login Form</h2>

<%= form_with url: login_url do |form| %>

<div class="mb-3">
  <%= form.label :UserName%>
  <%= form.text_field :name, class: "form-control", placeholder: "UserName"%>
  </div>
<div class="mb-3">
    <%= form.label :password%>
  <%= form.password_field :password, class: "form-control", placeholder: "Password"  %>
  </div>

  <%= form.submit "Sign In", class: "btn btn-primary" %>
<% end %>
